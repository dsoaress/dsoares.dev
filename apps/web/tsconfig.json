{
  "extends": "@dsoaress/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components": ["./src/components"],
      "@/containers": ["./src/containers"],
      "@/contexts": ["./src/contexts"],
      "@/data": ["./src/_data"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/mocks": ["./src/mocks"],
      "@/services": ["./src/services"],
      "@/types": ["./src/types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
