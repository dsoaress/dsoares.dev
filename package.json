{
  "name": "dsoares.me",
  "author": "Daniel Soares <daniel.soares@me.com>",
  "private": true,
  "version": "1.0.0",
  "license": "0BSD",
  "workspaces": [
    "studio",
    "web"
  ],
  "scripts": {
    "build:studio": "yarn workspace studio build",
    "build:web": "yarn workspace web build",
    "build": "run-s build:studio build:web",
    "dev:studio": "yarn workspace studio dev",
    "dev:web": "yarn workspace web dev",
    "dev": "run-p dev:studio dev:web",
    "clean": "yarn workspace web clean",
    "serve": "yarn workspace web serve",
    "test:studio": "yarn workspace studio test",
    "heroku-postbuild": "yarn build:web",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml}\"",
    "rebase": "git checkout main && git rebase next && git push && git checkout next"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  }
}
