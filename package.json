{
  "name": "dsoares.me",
  "author": "Daniel Soares <daniel.soares@me.com>",
  "version": "3.16.6",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:cov": "turbo run test:cov",
    "clear": "turbo run clear",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@dsoaress/eslint-config-base": "*",
    "@dsoaress/prettier-config-base": "*",
    "eslint": "8.21.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "turbo": "1.4.2"
  },
  "prettier": "@dsoaress/prettier-config-base",
  "eslintConfig": {
    "extends": [
      "@dsoaress/eslint-config-base"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write --ignore-path .gitignore",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
