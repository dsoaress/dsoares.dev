{
  "name": "dsoares.me",
  "author": "Daniel Soares <daniel.soares@me.com>",
  "version": "3.2.2",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "prebuild": "ts-node -P ./scripts/tsconfig.json ./scripts/prebuild.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "clean": "rm -rf node_modules .next public",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json}\"",
    "postversion": "git push --tags && git push"
  },
  "dependencies": {
    "next": "^11.0.1",
    "next-pwa": "^5.2.22",
    "next-seo": "^4.26.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^16.0.0",
    "@types/prettier": "^2.3.1",
    "@types/react": "^17.0.13",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.30.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.0",
    "jimp": "^0.16.1",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "postcss-load-config": "^3.1.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "tailwindcss": "^2.2.4",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "next",
      "next/core-web-vitals",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "simple-import-sort"
    ],
    "rules": {
      "prettier/prettier": "error",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "@next/next/no-page-custom-font": "off"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "labels": [
      "dependencies"
    ],
    "semanticCommits": "enabled",
    "rangeStrategy": "replace",
    "rebaseLabel": "rebase",
    "rebaseWhen": "auto",
    "packageRules": [
      {
        "updateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true
      },
      {
        "depTypeList": [
          "devDependencies"
        ],
        "automerge": true
      }
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
